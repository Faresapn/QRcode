<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.faresa.qrcodebuku">
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_buku"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_buku_round"
        android:screenOrientation="fullSensor"
        tools:replace="screenOrientation"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".MakeQr"></activity>
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QRCode.About" />
        <activity
            android:name=".QRCode.QRMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QRCode.Potrait"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id" />


    </application>

</manifest>